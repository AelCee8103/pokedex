<!DOCTYPE html>
<html lang="en">
<head>
  <%- include("../partials/header") %>
</head>
<body class="bg-gray-100 text-gray-800">
  <div class="container mx-auto p-5">
    <h1 class="text-3xl font-bold text-center mb-5">Pokédex</h1>


    <form action="/search" method="GET" class="flex justify-center mb-5">
      <input type="text" name="name" placeholder="Search Pokémon..." class="px-4 py-2 border rounded-l-lg focus:outline-none">
      <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-r-lg">Search</button>
    </form>    <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
      <% pokemonList.forEach(pokemon => { %>
        <a href="/pokemon/<%= pokemon.name %>" 
           class="p-4 bg-white shadow rounded-lg text-center hover:shadow-xl transform transition-all duration-300 hover:scale-105">
          <div class="relative">
            <img src="<%= pokemon.image %>" 
                 alt="<%= pokemon.name %>" 
                 class="w-32 h-32 mx-auto transition-opacity duration-300"
                 loading="lazy">
          </div>
          <p class="text-xl capitalize font-semibold mt-2"><%= pokemon.name %></p>
        </a>
      <% }); %>
    </div>

    <div class="flex justify-center gap-4 mt-8">
      <% if (hasPrevPage) { %>
        <a href="/?page=<%= currentPage - 1 %>" 
           class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
          Previous
        </a>
      <% } %>
      <span class="px-4 py-2 bg-gray-200 rounded-lg">
        Page <%= currentPage %> of <%= totalPages %>
      </span>
      <% if (hasNextPage) { %>
        <a href="/?page=<%= currentPage + 1 %>" 
           class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition-colors">
          Next
        </a>
      <% } %>
    </div>
  </div>
  <%- include("../partials/footer") %>
</body>
</html>